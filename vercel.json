{
    "buildCommand": "npx expo export -p web --output-dir dist && node scripts/deploy-pwa.js",
    "outputDirectory": "dist",
    "functions": {
        "api/*.js": {
            "runtime": "@vercel/node@3"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/_expo/(.*)",
            "destination": "/_expo/$1"
        },
        {
            "source": "/favicon.ico",
            "destination": "/favicon.ico"
        },
        {
            "source": "/manifest.json",
            "destination": "/manifest.json"
        },
        {
            "source": "/icon.png",
            "destination": "/icon.png"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}